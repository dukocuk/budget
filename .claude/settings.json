{
  "permissions": {
    "allow": [],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash scripts/install_pkgs.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "tools": ["Edit", "Write"],
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/PostToolUse.sh"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/PostToolUse-Tests.sh"
          }
        ]
      }
    ]
  }
}
